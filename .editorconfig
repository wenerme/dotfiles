root = true

[*]
charset = utf-8
max_line_length = 120
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_size = 2
indent_style = space

[*.go]
indent_size = 4
indent_style = tab

[Makefile,*.mk]
indent_size = 4
indent_style = tab


[Makefile]
indent_size = 4
indent_style = tab
